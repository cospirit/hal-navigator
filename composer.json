{
    "name": "cospirit/hal-navigator",
    "description": "Simple client to navigate through a HAL response",
    "keywords": ["API", "REST", "HAL", "browser"],
    "homepage": "https://github.com/cospirit/hal-navigator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "CoSpirit",
            "email": "dsi.poledev@cospirit.com"
        }
    ],

    "autoload": {
        "psr-4": { "CoSpirit\\HAL\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": {
            "Test\\CoSpirit\\HAL\\": "tests/"
        }
    },

    "require": {
        "php": ">=7.4"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^2.2"
    },

    "config": {
        "bin-dir": "bin",
        "process-timeout": 600
    }
}
